.search {
  height: 30px;
  padding: 6px 120rpx 6px 60rpx;
  position: relative;
  border-bottom: 1rpx solid #eee;
}
.search view:first-of-type {
    height: 30px;
    line-height: 30px;
    background-color: #d3dcdd;
    border-radius: 15px;
    width: 570rpx;
    padding-left: 10px;
}
.search view:first-of-type text {
      color: #888;
      font-size: 14px;
}
.search .imageBox {
    height: 26px;
    width: 26px;
    position: absolute;
    right: 30rpx;
    top: 8px;
}
.search .imageBox image {
      height: 26px;
      width: 26px;
      position: absolute;
      right: 0rpx;
      top: 0px;
      z-index: 2;
}
.qunliaoBox .qunliao {
  height: 42px;
  padding: 0 15px;
  line-height: 42px;
}
.qunliaoBox .qunliao .imgBox {
    background-color: #4cB964;
    border-radius: 5px;
    height: 32px;
    width: 32px;
    display: inline-block;
    position: relative;
    z-index: 1;
    margin-top: 5px;
}
.qunliaoBox .qunliao .imgBox image {
      position: absolute;
      border-radius: 5px;
      z-index: 2;
      left: 5px;
      top: 5px;
      height: 22px;
      width: 22px;
}
.qunliaoBox .qunliao text {
    font-size: 14px;
    margin-left: 20rpx;
    vertical-align: text-bottom;
}
#list .uni-indexed-list__item-border {
  position: relative;
  border: 0 !important;
}
#list .uni-indexed-list__item-border::after {
  content: "";
  position: absolute;
  height: 1rpx;
  background-color: #eee;
  width: 590rpx;
  right: 0;
  bottom: 1rpx;
}
#list .uni-indexed-list__title-wrapper {
  border: 0 !important;
}
#list .uni-indexed-list__list {
  border: 0 !important;
}
#list .uni-indexed-list__menu {
  background-color: #fff;
}

