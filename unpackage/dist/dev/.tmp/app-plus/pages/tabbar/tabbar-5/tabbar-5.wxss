
page {
	background-color: #eee;
}
.content {
	
	height: 100%;
}
.myCenter{
	background-color: #fff;
	height: 160rpx;
	padding: 40rpx;
}
.myCenter .touxiang {
	width: 140rpx;
	height: 140rpx;
	border-radius: 70rpx 70rpx;
	margin-top: 10rpx;
}
.myCenter .text{
	padding-left: 15rpx;
	width: 400rpx;
	vertical-align: top;
	display: inline-block;
	margin-top: 5%;
}
.myCenter .text ._p{
	
	line-height: 50rpx;
	font-size: 30rpx;
	color: #333;
}
.myCenter .text ._p:first-of-type{
	font-weight: bold;
}
.myCenter .text ._p:last-of-type{
	font-size: 12px;
}
.myCenter .bianji{
	float: right;
	margin-top: 60rpx;
	width: 40rpx;
	height: 40rpx;
}
.myList{
	
	font-size: 28rpx;
	color: #333;
}
.myList ._ul{
	border-top: 1rpx solid #ddd;
	border-bottom: 1rpx solid #ddd;
}
.myList .SelectList{
	position: relative;
	height: 120rpx;
	line-height: 120rpx;
	padding: 0rpx 50rpx;
	background-color: #fff;
	/* border-bottom: 1px solid #ddd; */
}
.myList .SelectList::before{
	content: '';
	position: absolute;
	height: 1rpx;
	background-color: #ddd;
	width: calc(100% - 50rpx);
	bottom: 0;
	right: 0;
}
.myList .nullBottom::before{
	content: '';
	position: absolute;
	height: 0rpx;
	background-color: #ddd;
	width: calc(100% - 50rpx);
	bottom: 0;
	right: 0;
}
.myList .SelectList image{
	width: 40rpx;
	height: 40rpx;
}
.myList text{
	vertical-align: middle;
	margin-left: 15rpx;
}
.myList .SelectList image:first-of-type{
	float: left;
	margin-top: 40rpx;
}
.myList .SelectList image:last-of-type{
	float: right;
	margin-top: 40rpx;
}

